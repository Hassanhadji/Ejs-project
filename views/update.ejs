<%- include("partials/header") %>

<h1>Update your Post</h1>

<form action="/update/submit" method="POST">
  <input type="hidden" name="id" value="<%= post.id %>">

  <textarea
    class="form-control"
    name="essay"
    rows="4"
  ><%= post.essay %></textarea>

  <div class="mt-2">
    <button class="btn btn-success">Save</button>
  </div>
</form>

